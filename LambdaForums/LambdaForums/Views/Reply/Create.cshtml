@model LambdaForums.Models.Reply.PostReplyModel

@{
    ViewData["Title"] = "Criar Resposta";
}


<div class="container body-content">
    <div class="row sectionHeader1">
        <div class="sectionHeading1">
            Responder | @Model.PostTitle
        </div>
        <span id="headingBtn">
            <a asp-controller="Post"
               asp-action="Index"
               asp-route-id="@Model.PostId"
               class="btn btn-back">
                Voltar ao post
            </a>
        </span>
    </div>
    <div class="row">
        <div id="originalPost">
            <h3>
                @Model.PostTitle
            </h3>
            <p>
                @Model.PostContent
            </p>
        </div>
    </div>
    <div class="row">
        <div class="createPostSection">
            <div class="authorBlock">
               @Model.AuthorName
            </div>

            <form asp-action="AddReply" method="post" id="addPostForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ReplyContent">Resposta </label>
                    <textarea asp-for="ReplyContent"
                              rows="20"
                              class="form-control"
                              placeholder="Escreva aqui..."></textarea>
                    <span asp-validation-for="ReplyContent" class="text-danger"></span>
                </div>
                <button type="submit" id="submitReplyBtn" class="btn btn-submitPost">Submit Reply</button>
                <input asp-for="AuthorId" type="hidden" />
                <input asp-for="PostId" type="hidden" />
                <input asp-for="ForumId" type="hidden" />
            </form>
        </div>
    </div>
</div>